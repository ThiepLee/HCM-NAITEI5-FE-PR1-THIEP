mixin newsList (sidebarHeader,icon, items)
  .sidebar.d-none.d-lg-block

    ul.sibebar__list
      .sidebarHeader.d-flex.align-items-center.border.text-primary.py-3.ps-3.border.bg-secondary.text-uppercase
        i.bi.sidebar__icon.mx-2.p-1.fw-bold(class= icon)
        p= sidebarHeader
      each item in items
          li.sidebar__item.d-flex.align-items-center.justify-content-start.py-3.ps-3.border 
            p.text-secondary.ms-2.p-1.sidebar__text=item
