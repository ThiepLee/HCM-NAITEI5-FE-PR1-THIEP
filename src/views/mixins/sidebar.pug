//- sidebar.pug
mixin sidebar(sidebarHeader,icon, items)
  .sidebar.d-none.d-lg-block

    ul.sibebar__list
      .sidebarHeader.d-flex.align-items-center.border.text-primary.py-3.ps-3.border.bg-secondary.text-uppercase
        i.bi.sidebar__icon.mx-2.p-1.fw-bold(class= icon)
        p= sidebarHeader
      each item in items
        +sidebarItem(item)
